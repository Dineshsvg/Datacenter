<h1>Listing datacentters</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Server available</th>
    <th>Server capacity</th>
    <th>Country</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @datacentters.each do |datacentter| %>
  <tr>
    <td><%= datacentter.code %></td>
    <td><%= datacentter.server_available %></td>
    <td><%= datacentter.server_capacity %></td>
    <td><%= datacentter.country_id %></td>
    <td><%= link_to 'Show', datacentter %></td>
    <td><%= link_to 'Edit', edit_datacentter_path(datacentter) %></td>
    <td><%= link_to 'Destroy', datacentter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

